      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: @user do |f| %>
  
  <%= f.label :username %>:
  <%= f.text_field :username, value: 'username' %>   
  <%= f.label :email %>:
  <%= f.email_field :email, placeholder: 'example@example.com' %>
  <%= f.label :password %>:
  <%= f.password_field :password %>
  <%= f.submit 'Submit' %>
<% end %>